        <!--        from tbl_student ts left join  tbl_parent tb on ts.pid=tb.parentid-->
        <!--        left join  tbl_safetyconfig tbs on ts.cid=tbs.classid-->
        <!--        where   ts.cid=1) t left join tbl_safetytestcompletion tbls on-->
